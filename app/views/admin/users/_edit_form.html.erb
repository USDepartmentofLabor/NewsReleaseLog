<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :admin, as: :boolean, label: 'Admin?' %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button , :input_html => {:class => "btn btn-primary"}%>
  <% end %>
<% end %>
