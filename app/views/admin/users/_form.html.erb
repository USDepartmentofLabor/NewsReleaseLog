<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, as: :radio %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button , :input_html => {:class => "btn btn-primary"}%>
  <% end %>
<% end %>
