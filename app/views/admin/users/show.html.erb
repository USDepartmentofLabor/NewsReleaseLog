<h1><%= @user.first_name.capitalize + ' ' + @user.last_name.capitalize %></h1>
<p>
  <strong>First Name:</strong>
  <%= @user.first_name.capitalize %>
</p>
<p>
  <strong>Last Name:</strong>
  <%= @user.last_name.capitalize %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email%>
</p>
<p>
  <strong>Role:</strong>
  <%= @user.role.capitalize %>
</p>
<p>
  <strong>Current SignIn At:</strong>
  <%= @user.current_sign_in_at %>
</p>

<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-dark btn-sm custom-button' %>
<%= link_to 'Back', users_path, class: 'btn btn-dark btn-sm custom-button' %>
