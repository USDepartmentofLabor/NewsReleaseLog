<h1><%= @user.first_name.capitalize + ' ' + @user.last_name.capitalize %></h1>
<div class="row mt-5">
  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">First Name:</h6>
        <p><%= @user.first_name.capitalize %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Last Name:</h6>
        <p><%= @user.last_name.capitalize %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Email:</h6>
        <p><%= @user.email %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Role:</h6>
        <p><%= @user.role.capitalize %></p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Current SignIn at:</h6>
        <p><%= @user.current_sign_in_at %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Current SignIn IP:</h6>
        <p><%= @user.current_sign_in_ip %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Last SignIn at:</h6>
        <p><%= @user.last_sign_in_at %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title font-weight-bold">Last SignIn IP:</h6>
        <p><%= @user.last_sign_in_ip %></p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-sm-2">
    <%= link_to 'Back', users_path, class: 'btn btn-dark btn-sm primary-action-button' %>
  </div>
  <div class="col-sm-2">
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-dark btn-sm primary-action-button' %>
  </div>
</div>
