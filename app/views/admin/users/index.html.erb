<div class="table-responsive">
  <h1 class="text-center">Users</h1>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Last Signin</th>
        <th scope="col">Admin?</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= user.admin?.to_s.capitalize %></td>
        <td><%= link_to 'Show', user_path(user), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Delete', user_path(user), data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger'%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= button_to "Create User", new_user_path, method: :get, class: "btn btn-primary float-right" %>
<%= paginate @users %>