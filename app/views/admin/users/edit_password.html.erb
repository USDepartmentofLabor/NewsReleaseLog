<% @title = "Change Password for #{@user.full_name}- News Release Log - United States Department of Labor" %>
<%= semantic_form_for @user, :url => admin_update_user_password_path(@user), :html => { :method => :patch } do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <h1 class="h2">Change Password for <%= "#{@user.full_name}" %></h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-12">
    <%= f.inputs do %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
    <%= f.actions do %>
      <%= f.action :submit, :as => :button , :input_html => {:class => "btn btn-primary"}%>
    <% end %>
    </div>
  </div>
<% end %>