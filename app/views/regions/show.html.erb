<h1>Region</h1>
<div class="row mt-5">  
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Region Name
      </div>
      <div class="card-body">
        <p><%= @region.name %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Region Code
      </div>
      <div class="card-body">
        <p><%= @region.code %></p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-sm-2">
    <%= link_to 'Back', regions_path, class: 'btn btn-dark btn-sm primary-action-button' %>
  </div>
  
  <div class="col-sm-2">
    <%= link_to 'Edit', edit_region_path(@region), class: 'btn btn-dark btn-sm primary-action-button' %>
  </div>
</div>
