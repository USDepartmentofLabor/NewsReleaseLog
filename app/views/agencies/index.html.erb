<h1 class="d-inline-block">Agencies</h1>
<%= link_to 'Add Agency', new_agency_path, class: "btn btn-dark float-right  mt-1 add-button" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Agency Name</th>
      <th>Agency Code</th>
      <th colspan="4" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @agencies.each do |agency| %>
      <tr>
        <td class="font-weight-bold"><%= agency.name %></td>
        <td class="font-weight-bold"><%= agency.code %></td>
        <td class="text-right"><%= link_to 'Show', agency, class: 'btn btn-dark btn-sm custom-button' %></td>
        <td class="text-right"><%= link_to 'Edit', edit_agency_path(agency), class: 'btn btn-dark btn-sm custom-button' %></td>
        <td class="text-right"><%= link_to 'Delete', agency, method: :delete, class: 'btn btn-danger btn-sm custom-button', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @agencies %>