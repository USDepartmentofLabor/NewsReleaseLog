<h1 class='d-inline-block'>Agencies</h1>
<%= link_to 'Add New Agency', new_agency_path, class: 'btn btn-dark float-right  mt-1 add-button' %>

<div class='table-responsive'>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Agency Name</th>
        <th>Agency Code</th>
        <th colspan='2' class='text-center'>Actions</th>
      </tr
    </thead>

    <tbody>
      <% @agencies.each do |agency| %>
        <tr>
          <td class='font-weight-bold'><%= link_to "#{agency.name}", agency %></td>
          <td class='font-weight-bold'><%= agency.code %></td>
          <td class='text-center ml-2'>
            <%= link_to edit_agency_path(agency) do %>
              <i class='fa fa-edit fa-2x' title='Edit Agency'></i> 
            <% end %> 
          </td>

          <td class='text-center mr-2'>
            <%= link_to agency, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class='fa fa-trash fa-2x' title='Delete Agency'></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= paginate @agencies %>