<p id="notice"><%= notice %></p>

<h1>News Logs</h1>
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="active-drafts-tab" data-toggle="tab" href="/news_logs/active_drafts" role="tab" aria-controls="active drafts" aria-selected="true">Active Drafts</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="drafts-tab" data-toggle="tab" href="/news_logs/drafts" role="tab" aria-controls="drafts" aria-selected="false">Drafts</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="published-tab" data-toggle="tab" href="/news_logs/publised" role="tab" aria-controls="published" aria-selected="false">Published</a>
  </li>
</ul>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Release#</th>
      <th>Status</th>
      <th>Received date</th>
      <th>Release date</th>
      <th>Agency</th>
      <th>Region</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @news_logs.each do |news_log| %>
      <tr>
        <td><%= news_log.title.truncate(24) %></td>
        <td><%= news_log.user.initials %></td>
        <td><%= link_to "#{news_log.news_release_number}", news_log %></td>
        <td><%= news_log.aasm_state %></td>
        <td><%= date_format news_log.received_date %></td>
        <td><%= date_format news_log.release_date%></td>
        <td><%= news_log.agency.try(:name) %></td>
        <td><%= news_log.region.try(:name) %></td>
        <td><%= link_to 'Edit', edit_news_log_path(news_log), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', news_log, method: :delete, class: "btn btn-danger" , data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New News Log', new_news_log_path,class: "btn btn-primary" %>
<%= paginate @news_logs %>
