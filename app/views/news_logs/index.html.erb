<h1 class='d-inline-block'>News Logs</h1>
<%= link_to 'Add NewsLog', new_news_log_path, class: 'btn btn-dark float-right  mt-1 add-button' %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Release#</th>
      <th>Status</th>
      <th>Received date</th>
      <th>Release date</th>
      <th>Agency</th>
      <th>Region</th>
      <th colspan='3' class='text-center'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @news_logs.each do |news_log| %>
      <tr>
        <td><%= news_log.title.truncate(24) %></td>
        <td><%= news_log.user.initials %></td>
        <td><%= link_to "#{news_log.news_release_number}", news_log %></td>
        <td><%= news_log.aasm_state %></td>
        <td><%= date_format news_log.received_date %></td>
        <td><%= date_format news_log.release_date%></td>
        <td><%= news_log.agency.try(:name) %></td>
        <td><%= news_log.region.try(:name) %></td>
        <td><%= link_to 'Edit', edit_news_log_path(news_log), class: 'btn btn-dark btn-sm custom-button' %></td>
        <td><%= link_to 'Delete', news_log, method: :delete, class: 'btn btn-danger btn-sm custom-button', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @news_logs %>
