<% @title = "View News Release #{@news_log.news_release_number} - News Release Log - United States Department of Labor" %>
<div class='container justify-content-center'>
  <div>
    <%= link_to 'History', history_news_log_path(@news_log), class: "btn btn-dark btn-sm primary-action-button"%>
    <%= link_to 'Edit', edit_news_log_path(@news_log), class: "btn btn-dark btn-sm primary-action-button" %>
    <div class='mb-3 p-3 bg-info rounded w-50 mt-4'>
       <strong> Current status of this news release is : <%= @news_log.aasm_state.capitalize %></strong>
    </div>
    <p>
      <strong>News Release Number:</strong>
      <%= @news_log.news_release_number %>
    </p>
     <p>
      <strong>Received date:</strong>
      <%= date_format @news_log.received_date %>
    </p>

    <p>
     <strong>Release date:</strong>
      <%= date_format @news_log.release_date %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @news_log.title %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @news_log.user.full_name %>
    </p>

    <p>
      <strong>Agency:</strong>
      <%= @news_log.agency.try(:name) %>
    </p>

    <p>
      <strong>Document:</strong>
      <%=link_to "#{grid_fs_filename @news_log}", get_document_news_log_path(@news_log), class: 'nrl-file-link formtastic' %>
    </p>

    <p>
      <strong>Region:</strong>
      <%= @news_log.region.try(:name) %>
    </p>

    <p>
      <strong>Distribution lists:</strong>
      <% @news_log.distributionlists.each do |d| %>
        <%=d.name%></br>
      <%end%>
    </p>
    <%= link_to 'Back', news_logs_path, class: "btn btn-dark"  %>
  </div>
</div>
